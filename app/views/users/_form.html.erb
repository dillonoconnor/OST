<%= form_with model: user, local: true do |f| %>

<div class="field">
  <%= f.label :email, class: "label has-text-white" %>
  <div class="control">
    <%= f.text_field :email, class: "input" %>
  </div>
</div>


<div class="field">
  <%= f.label :username, class: "label has-text-white" %>
  <div class="control">
    <%= f.text_field :username, class: "input" %>
  </div>
</div>



<div class="field">
  <%= f.label :password, class: "label has-text-white" %>
  <div class="control">
    <%= f.password_field :password, class: "input" %>
  </div>
</div>



<div class="field">
  <%= f.label :password_confirmation, "Confirm Password", 
              class: "label has-text-white" %>
  <div class="control">
    <%= f.password_field :password_confirmation, class: "input" %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.submit "Create Account", class: "button is-primary" %>
  </div>
</div>

<% end %>