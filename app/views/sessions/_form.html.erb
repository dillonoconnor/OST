<%= form_with url: session_url, local: true do |f| %>

  <div class="field">
    <%= f.label :username_or_email, class: "label" %>
    <%= f.text_field :username_or_email, class: "control input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "control input" %>
  </div>

  <div class="field">
    <%= f.submit "Sign In", class: "control button is-primary has-text-weight-semibold" %>
  </div>

<% end %>