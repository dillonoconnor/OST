<%= form_with(model: playlist, local: true) do |f| %>
  <div class="field">
    <%= f.label :id, "Spotify URI (e.g. 'spotify:playlist:1mjzvebZWb4LVrYBMcqyAr')", class: "label has-text-white" %>
    <div class="control">
        <%= f.text_field :id, class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit class: "button is-primary has-text-weight-semibold" %>   
    </div>
  </div>
<% end %>