<%= form_with(model: playlist, local: true) do |f| %>
  <div class="field">
    <%= f.label :id, "Spotify URI (e.g. 'spotify:playlist:1mjzvebZWb4LVrYBMcqyAr')", class: "label" %>
    <div class="control">
        <%= f.text_field :id, class: "input", autocomplete: "off" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit class: "button is-primary has-text-weight-semibold" %>   
    </div>
  </div>
<% end %>

<br>

<%= form_with(url: new_playlist_url, local: true, method: :get) do |f| %>
  <div class="field">
    <%= f.label :playlist_name, "Playlist Name", class: "label" %>
    <div class="control">
      <%= f.text_field :playlist_name, class: "input", autocomplete: "off" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Search", class: "button control is-primary has-text-weight-semibold" %>   
    </div>
  </div>
<% end %>

<% if @playlists.present? %>
  <div class="content">
    <ul>
      <%= render partial: "playlist", collection: @playlists %>
    </ul>
  </div>
<% end %>
