<% if flash.any? %>
  <% flash.each do |name, msg| %>
    <% case name.to_sym %>
      <% when :notice %>
        <%= content_tag :div, msg, class: "notification is-primary" %>
      <% when :alert %>
        <%= content_tag :div, msg, class: "notification is-danger" %>
    <% end %>
  <% end %>
<% end %>